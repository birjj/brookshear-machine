{
    "name": "brookshear-machine",
    "description": "A Brookshear Machine Emulator written in React and Mobx",
    "author": "birjolaxew <johanringmann@gmail.com>",
    "homepage": "https://brookshear.jfagerberg.me/",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/birjolaxew/brookshear-machine"
    },
    "version": "0.1.0",
    "private": true,
    "devDependencies": {
        "commitizen": "^4.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.0",
        "parcel": "^2.0.0-beta.1",
        "prettier": "^2.1.2",
        "semantic-release": "^17.2.1",
        "typescript": "^4.0.5"
    },
    "scripts": {
        "dev": "parcel index.html --open",
        "build": "parcel build index.html"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "master"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "angular",
                    "releaseRules": [
                        {
                            "type": "docs",
                            "release": "patch"
                        },
                        {
                            "type": "chore",
                            "release": "patch"
                        }
                    ]
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    }
}
